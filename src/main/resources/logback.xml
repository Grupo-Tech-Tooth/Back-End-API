<configuration>

    <!-- Root Logger reduzido para evitar logs desnecessários de outros pacotes -->
    <root level="warn">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Logger específico para AgendamentoController (registra info, warn e error) -->
    <logger name="com.example.back.controller.AgendamentoController" level="info" additivity="false">
        <appender-ref ref="FILE"/>
        <!--<appender-ref ref="CONSOLE"/>-->
    </logger>

    <!-- Logger específico para LoggerObserver (registra info, warn e error) -->
    <logger name="com.example.back.observer.LoggerObserver" level="info" additivity="false">
        <appender-ref ref="FILE"/>
        <!--<appender-ref ref="CONSOLE"/>-->
    </logger>

    <!-- Console Appender para ver logs localmente -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuração do appender de arquivo com rotação de logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/meu_arquivo_log.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <!-- Política de rotação por tempo e tamanho -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/meu_arquivo_log.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

</configuration>